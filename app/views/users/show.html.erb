<%- model_class = @user.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %> @<%= @user.screen_name %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @user.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:followers_count) %>:</strong></dt>
  <dd><%= @user.followers_count %></dd>
</dl>
<h3><%=t '.twits_title', :default => Twit.model_name.human.pluralize %></h2>

<% 

     @twits = Twit.where(:user_id => @user).order("created_at DESC").limit(10)

%>

<%= render :layout => '/twits/twit_list' do %>
   
<% end %>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              :back, :class => 'btn'  %>
</div>
