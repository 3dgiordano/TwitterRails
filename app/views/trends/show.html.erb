<%- model_class = @trend.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %>: <%= @trend.name %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:as_of) %>:</strong></dt>
  <dd><%= @trend.as_of %></dd>
</dl>

<h3><%=t '.twits_title', :default => Twit.model_name.human.pluralize %></h2>

<% @twits = @trend.twit.order("created_at DESC").limit(10) %>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= Twit.human_attribute_name("user_id") %></th>
      <th><%= Twit.human_attribute_name("text") %></th>
      <% if false %>
         <th><%=t '.actions', :default => t("helpers.actions") %></th>
       <% end %>
    </tr>
  </thead>
  <tbody>
    <% @twits.each do |twit| %>
      <tr>
        <td><%= twit.user.screen_name %></td>
        <td><%= twit.text %></td>
        <% if false %>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      twit_path(twit), :class => 'btn btn-mini' %>
          
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_twit_path(twit), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      twit_path(twit),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
         
        </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              trends_path, :class => 'btn'  %>
<%= link_to t('.refresh', :default => t("helpers.links.refresh")), refresh_twits_trends_path(:id => @trend), :class => 'btn btn-primary' %>
<% if false %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_trend_path(@trend), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              trend_path(@trend),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
<% end %>
</div>
