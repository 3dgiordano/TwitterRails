<%- model_class = Trend.new.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:as_of) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @trends.each do |trend| %>
      <tr>
        <td><%= link_to trend.id, trend_path(trend) %></td>
        <td><%= trend.name %></td>
        <td><%= trend.as_of %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      trend_path(trend), :class => 'btn btn-mini' %>
          <% if false %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_trend_path(trend), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      trend_path(trend),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<% if false %>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_trend_path,
            :class => 'btn btn-primary' %>
<% end %>
<%= link_to t('.refresh', :default => t("helpers.links.refresh")), {:controller => "trends", :action => "refresh"}, :class => 'btn btn-primary' %>


